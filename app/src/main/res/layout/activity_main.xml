<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chrsrck.gameon.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="132dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/textCursorDrawable" />

    <Button
        android:id="@+id/Check"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="changeScreens"
        android:text="@string/check_in_out_button"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/Request"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/Request"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:onClick="changeScreens"
        android:text="@string/request_equipment_button"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/Damage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Check" />

    <Button
        android:id="@+id/Damage"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:onClick="changeScreens"
        android:text="@string/damage_report_button"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/Options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Request" />

    <Button
        android:id="@+id/Options"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="changeScreens"
        android:text="@string/options_button"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Damage" />
</android.support.constraint.ConstraintLayout>
