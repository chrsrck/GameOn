<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chrsrck.gameon.ViewRequests"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalRequest"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text="You have 2 pending requests."
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Soccer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="5dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Joshua Willard"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="5dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Soccer Ball: 1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Surge 109"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Soccer"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="5dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Joshua Willard"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="5dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Yellow Card: 2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:text="Surge 109"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>