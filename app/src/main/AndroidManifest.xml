<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chrsrck.gameon">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ChooseSportActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ViewReports"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".CheckActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".DamageActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".RequestActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ViewRequests"
            android:windowSoftInputMode="stateHidden"/>

        <service
            android:name=".GameOnFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>



</manifest>